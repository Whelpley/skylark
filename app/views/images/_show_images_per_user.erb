<div class='row col-md-12'>
  <h3><%= image.tileset_name %></h3>
</div>

<div class='row col-md-12'>
  <div class='col-md-3'>
    <img class="upload-image" src=""/>
  </div>
  <div class='col-md-5'>
    <ul>
      <li>Description: <%= image.description %></li>
    </ul>
  </div>
  <div class='col-md-4'>
    <ul>
      <li>Date taken: <%= image.date_taken %></li>
      <li>Camera type: <%= image.camera_type %></li>
    </ul>
    <br>
    <!-- Experimental code! Upvote button -->
    <!-- adds a user vote (on their own image), redirects to main map -->
    <%= link_to like_image_path(image), class: "like", method: :put do %>
      <button type="button" class="btn btn-info">
        <span class='glyphicon glyphicon-thumbs-up glyphicon-align-center'></span>
        <span class='badge'><%= image.get_upvotes.size %></span>
      </button>
    <% end %>
    <br>
    <%= link_to 'Edit Image info', edit_image_path(image), :class => "btn btn-danger"  %>
    <br>
    <br>
    <%= link_to 'Delete item', image_path(image), method: :delete, :class => "btn btn-danger" %>
<!--     <p>(Note: the above link will not actually delete the image from Mapbox, just from the display.)</p> -->
  </div>
</div>
