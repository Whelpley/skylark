<div class="page-header"><h1>Upload Image</h1></div>

<%= form_for :image, url: images_path(@image) do |f| %>

  <div class="form-group">
    <%= f.label :tileset %>
    <%= f.text_field :tileset_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :date_taken %>
    <%= f.text_field :date_taken, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :camera_type %>
    <%= f.text_field :camera_type, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image_file, class: 'form-control'%>
  </div>

  <%= f.submit 'Upload', class: 'btn btn-primary' %>
<% end %>
